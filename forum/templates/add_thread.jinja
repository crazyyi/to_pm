{% extends "base.html" %}
{% block content %}
<div class="row">
  <div class="col-sm-2">
  </div>
  <div class="col-sm-8" style="background-color: #ffffff">
    <!--<div class="container">-->
      <div class="row well">
        <div class="col-sm-1">
        </div>
        <div class="col-sm-10" >
          <form action="{{ url('forum:add_thread') }}" method="POST" class="form-horizontal">
            <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
            <legend>Welcome to 2pm </legend>
            <div class="form-group {% if add_thread_form.title.errors %} has-error {% endif %}">
              {{add_thread_form.title.label_tag()}}
              <div>
                {{ add_thread_form.title }} 
              </div>
              <p class="help-block">
                {{ add_thread_form.title.errors[0] }}
            </div>
            <div class="form-group {% if add_thread_form.content.errors %} has-error {% endif %}">
              {{add_thread_form.content.label_tag()}}
              <div>
                {{ add_thread_form.content }}
              </div>
              <p class="help-block">
                {{ add_thread_form.content.errors[0] }}

            </div>
            <div class="form-group {% if add_thread_form.tag.errors %} has-error {% endif %}">
              {{add_thread_form.tag.label_tag()}}
              <div>
                {{ add_thread_form.tag }}
              </div>
              <p class="help-block">
                {{ add_thread_form.tag.errors[0] }}

            </div>
            <div class="control-group">
              <div class="controls">
                <button class="btn btn-success" type="submit">Submit</button>
              </div>
            </div>
          </form>
        </div>
        <div class="col-sm-1">
        </div>
      </div>
    <!--</div>-->
  </div>
  <div class="col-sm-2">
  </div>
</div>
{% endblock %}