{% extends "post.jinja" %}
{% block form %}
<form action="{{ url('forum:add_thread') }}" method="POST" class="form-horizontal">
            <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
            <legend>欢迎到两点钟讨论区</legend>
            <div class="form-group {% if add_thread_form.title.errors %} has-error {% endif %}">
              {{add_thread_form.title.label_tag()}}
              <div>
                {{ add_thread_form.title }} 
              </div>
              <p class="help-block">
                {{ add_thread_form.title.errors[0] }}
            </div>
            <div class="form-group {% if add_thread_form.content.errors %} has-error {% endif %}">
              {{add_thread_form.content.label_tag()}}
              <div>
                {{ add_thread_form.content }}
              </div>
              <p class="help-block">
                {{ add_thread_form.content.errors[0] }}

            </div>
            <div class="form-group {% if add_thread_form.tags.errors %} has-error {% endif %}">
              {{add_thread_form.tags.label_tag()}}
              <div>
                {{ add_thread_form.tags }}
              </div>
              <p class="help-block">
                {{ add_thread_form.tags.errors[0] }}

            </div>
            <div class="control-group">
              <div class="controls">
                <button class="btn btn-success" type="submit">Submit</button>
              </div>
            </div>
          </form>
{% endblock %}